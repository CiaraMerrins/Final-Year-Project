<div class="col-md-6 col-md-offset-2">
<div class="row">
<div class="panel panel-default">
<h1 class="title">
<%= @post.title %>
<%= @post.status_type %>
</h1>
<p class="date">
Submitted <%= time_ago_in_words(@post.created_at) %> Ago
| <%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %>
</p>
<p> These are the diary entries for <%= @post.player.name %></p>
<p class= "body">

<%= @post.body %>
</p>
<table border="1" style="width:100%">
	<tr>
	
<div id="comments">
<td><p><%= @post.comments.count %> Comments from your coach</p></td>
</tr>
<% @post.comments.each do |comment| %>
	
	
	<tr>
	<td><h2><%= comment.body %></td></h2>
	</tr>
	<br>
	<tr>
	<td><%= comment.created_at.to_s %></td>
	</tr>
	<br>
	<tr>
	<td><%= @post.player.coach.name %></br></td>
	</tr>
<% end %>

</div>
</div>