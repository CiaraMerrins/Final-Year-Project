<%= link_to 'Create new Pin', new_pin_path , class: "btn btn-default" %>
<div class="col-md-6 col-md-offset-2">
<div id="pins" class="transitions-enabled">	
	<% @pins.each do |pin| %>
		<div class="box panel panel-default">
			<h2 class="image_file_name"><%= link_to pin.image_file_name, pin %></h2>
			<h1 class="title"><%= link_to pin.title, pin %></h1>
			<%= image_tag pin.image_file_name %>
			<p class="date"><%= pin.created_at.strftime("%B, %d, %Y") %></p>
</div>
<% end %>
