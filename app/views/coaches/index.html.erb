<h1>Listing coaches</h1>


<table>
  <thead>
  <style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
</style>
</head>
<body>
<table style="width:100%">  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      
      <th>Image</th>
      <th>Gender</th>
	  <th>Age Group</th>
      <th>Sport</th>
	  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= coach.name %></td>
        <td><%= coach.email %></td>
        
        <td><%= coach.image %></td>
        <td><%= coach.gender %></td>
		<td><%= coach.agegroup %></td>
        <td><%= coach.sport_id %></td>
		
        <td><%= link_to 'Show', coach %></td>
        <td><%= link_to 'Edit', edit_coach_path(coach) %></td>
        <td><%= link_to 'Destroy', coach, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

